<ul class="grid grid-cols-1 gap-5 sm:grid-cols-2">
  <li
    class="transition duration-700 ease-in delay-700 hover:transition hover:duration-700 hover:ease-out flex items-center gap-4">
    <span
      class="w-11 h-11 flex items-center justify-center border-t border-zinc-700 bg-zinc-800 rounded-full"
      ><img
        class="hover:animate-bounce-slow focus:animate-bounce-slow"
        src={javascript}
        alt=""
        height={25}
        width={25}
      />
    </span>
    <p class="text-zinc-200">JavaScript</p>
  </li>

  <li class="flex items-center gap-4">
    <span
      class="w-11 h-11 flex items-center justify-center border-t border-zinc-700 bg-zinc-800 rounded-full"
