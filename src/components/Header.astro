---
import { SITE_TITLE } from "../config"
import HeaderLink from "./HeaderLink.astro"
---

<header>
	<h2 class="text-3xl font-semibold">
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink id="Home" href="/">Home</HeaderLink>
		<HeaderLink id="Portfolio" href="/projects">Portfolio</HeaderLink>
		<HeaderLink id="Blog" href="/blog">Blog</HeaderLink>
		<HeaderLink id="About" href="/about">About</HeaderLink>
		<HeaderLink
			id="GitHub"
			href="https://github.com/ronthetech"
			target="_blank"
			rel="noreferrer noopener">
			GitHub
		</HeaderLink>
		<HeaderLink
			id="Twitter"
			href="https://twitter.com/ronjtech"
			target="_blank"
			rel="noreferrer noopener">
			Twitter
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
