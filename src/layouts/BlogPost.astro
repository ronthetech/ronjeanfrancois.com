---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

export interface Props {
	content: {
		title: string
		description: string
		pubDate?: string
		updatedDate?: string
		heroImage?: string
		alt?: string
	}
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, alt },
} = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.return {
				font-size: 1.25em;
				margin: 2rem 0 0 0;
				text-decoration: none;
			}
			.return:hover,
			.return:focus {
				text-decoration: underline;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{
					heroImage && (
						<img width={720} height={360} src={heroImage} alt={alt} />
					)
				}
				<h1 class="title">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
				{
					updatedDate && (
						<div>
							Last updated on <time>{updatedDate}</time>
						</div>
					)
				}
				<hr />
				<slot />
			</article>
			<a href="/blog" class="return" id="back-to-blog" rel="prefetch"
				>&lt;&#45; Back to Ron&#39s Blog</a
			>
		</main>
		<Footer />
	</body>
</html>
