---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

import type { Project } from "../types"

interface Props {
	content: Project
}

const { content } = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={content.title} description={content.description} />
		<style>
			.hero {
				padding: 8rem;
				display: flex;
				background-color: var(--t-fg);
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}

			.tag {
				margin-left: 0.5em;
				margin-right: 0.5em;
				text-transform: uppercase;
			}

			.tag:nth-of-type(1n) {
				color: var(--c-green);
			}
			.tag:nth-of-type(2n) {
				color: var(--c-orange);
			}
			.tag:nth-of-type(3n) {
				color: var(--c-blue);
			}
			.tag:nth-of-type(4n) {
				color: var(--c-pink);
			}

			.title {
				font-size: var(--f-u5);
				background-color: rgba(112, 128, 144, 0.7);
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: 0.0625em;
				color: black;
				text-align: center;
			}

			.leadIn {
				padding-top: 4em;
				color: var(--t-bg);
				background-color: var(--t-fg);
				text-align: center;
			}

			.tagline {
				font-weight: 300;
				font-size: var(--f-u2);
				line-height: 1.5;
				color: var(--c-blue);
			}

			.content {
				font-size: var(--f-u1);
				line-height: 2.2;
				max-width: 50em;
				margin: auto;
			}

			.wrapper {
				padding-bottom: 4em;
				margin-bottom: 4em;
			}

			.foot {
				text-align: center;
				margin-top: 3rem;
			}

			.btn {
				color: var(--c-white);
			}
		</style>
	</head>
	<body>
		<Header />
		<div style={`background-image:url(${content.img})`} class="hero">
			<h1 class="title">{content.title}</h1>
		</div>
		<div class="leadIn">
			<div class="wrapper">
				{content.tags.map((t) => <span class="tag">{t}</span>)}
				<h2 class="tagline">{content.description}</h2>
				<a href={content.link} class="button btn" rel="noopener" target="_blank"
					>Link</a
				>
				<a
					href={content.github}
					class="button btn"
					rel="noopener"
					target="_blank">Github</a
				>
			</div>
		</div>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<div class="foot">
			<a href="/projects" class="button" rel="prefetch">View More</a>
		</div>
		<Footer />
	</body>
</html>
