---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import PortfolioPreview from "../components/PortfolioPreview.astro"
import TechPreview from "../components/TechPreview.astro"
import { SITE_DESCRIPTION, SITE_TITLE } from "../config"
import type { Project } from "../types"

// Data Fetching: List all Markdown posts in the repo.
const projects = await Astro.glob<Project>("./project/**/*.md")
const featuredProject = projects[0]!
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
			}

			.hero {
				position: relative;
				overflow: visible;
			}

			.img {
				display: block;
				width: 100%;
				height: auto;
			}

			.grid {
				display: grid;
				gap: 2rem;
			}

			@media (min-width: 1200px) {
				.grid {
					grid-template-columns: 2fr;
				}
			}

			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
				margin-top: 4rem;
				margin-bottom: 2rem;
			}

			.roles {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				font-size: var(--f-d1);
			}

			.role {
				position: relative;
				display: inline-block;
				white-space: nowrap;
				font-weight: 900;
				color: var(--t-bg);
				background-color: var(--t-fg);
				padding: 0.25em 0.5em;
				z-index: 2;
			}

			@media (min-width: 750px) {
				.role {
					font-size: var(--f-u3);
				}
			}

			.role:nth-of-type(1) .invert {
				background-color: var(--c-red);
			}

			.role:nth-of-type(2) .invert {
				background-color: var(--c-blue);
			}

			.role:nth-of-type(3) .invert {
				background-color: var(--c-green);
			}

			.role:hover .invert {
				clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
			}

			.invert {
				position: absolute;
				color: var(--t-fg);
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
				transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
			}

			.desc {
				font-size: var(--f-u2);
				margin-top: 1.5rem;
				margin-bottom: 0;
				color: black;
				background-color: darkseagreen;
				padding: 0.25em 0.5em;
			}

			.bio {
				line-height: 2;
				margin-bottom: 2rem;
			}

			.bio > span:first-of-type {
				line-height: 1;
				margin-bottom: 0.5em;
				display: block;
				font-weight: 700;
				font-size: var(--f-u4);
			}

			.buttonContainer {
				text-align: center;
				margin-top: 2em;
			}
			.title {
				font-size: var(--f-u4-5);
			}
			@media (max-width: 750px) {
				.title {
					font-size: var(--f-u3);
				}
			}
		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main class="wrapper">
			<div class="hero">
				<img
					width="1600"
					height="1131"
					class="img"
					alt="sun setting over an amateur dragstrip for racing cars"
					src="https://i.ibb.co/ngGmgfY/143-A35-E8-425-B-4-A9-C-9231-6-A93-A8169-E94.jpg"
					sizes="(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width: 2400px) 2400px, 1200px"
				/>
				<h1 class="title">
					Hi! My name is Ron Jean-Francois, Im a Full Stack Engineer
				</h1>
				<div class="roles">
					<span class="role"
						>ğŸ‘¨ğŸ¾â€ğŸ’» Engineer <span class="invert">ğŸ’» Engineer</span>
					</span>
					<span class="role"
						>ğŸ–‹ï¸ Writer <span class="invert">âœ’ï¸ Writer</span>
					</span>
					<span class="role"
						>ğŸ“¸ Photographer <span class="invert">ğŸ–¼ï¸ Photographer</span>
					</span>
					<p class="desc">Tech and Code Enthusiast, Basketball Fanatic â›¹ğŸ¾</p>
				</div>
			</div>
			<div class="grid">
				<section>
					<h2 class="sectionTitle">My Work</h2>
					<PortfolioPreview project={featuredProject} />
					<div class="buttonContainer">
						<a href="/projects/" class="button" rel="prefetch">View All</a>
					</div>
				</section>
				<section id="technology">
					<h2 class="sectionTitle">Technologies I Use</h2>
					<TechPreview />
				</section>
				<section id="section-about">
					<h2 class="sectionTitle">About Me</h2>
					<p class="bio">
						<span>Hello!</span> I&#39m Ron, and this is my website. I enjoy opportunities
						to learn new things and share ideas. I love science, technology, programming,
						old cars and basketball. They all provide me the chance to explore new
						ideas and satisfy my curiosity. I started sharing what I&#39ve learned
						so far and what I&#39m learning now on my <a href="/blog">blog</a>.
					</p>
					<p>
						<a href="/about" class="button" id="about" rel="prefetch"
							>more about me</a
						>
					</p>
				</section>
			</div>
