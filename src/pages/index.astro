---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import PortfolioPreview from "../components/PortfolioPreview.astro"
import { SITE_DESCRIPTION,SITE_TITLE } from "../config"
import type { Project } from "../types"

import send from "../assets/icons/Send.svg"

// Data Fetching: List all Markdown posts in the repo.
const projects = await Astro.glob<Project>("./project/**/*.md")
const featuredProject = projects[0]!
---

<!DOCTYPE html>
<html lang="en" class="font-mono">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      @media (min-width: 1200px) {
        .grid {
          grid-template-columns: 2fr;
        }
      }
    </style>
  </head>
  <body class="max-w-4xl bg-[url('/src/assets/circuit-board.svg')] flex flex-col min-h-screen">
    <Header title={SITE_TITLE} />
    <main class="wrapper my-8 flex-grow">
		<div class="text-center mb-4">
			<h1 class="text-2xl lg:text-3xl mt-4 font-medium">
				Software Engineer in New York
			  </h1>
		</div>
      <!-- <div class="relative overflow-visible text-center">
        <img
          width="1600"
          height="1131"
          class="block w-full h-auto"
          alt="sun setting over an amateur dragstrip for racing cars"
          src="/assets/hero.jpg"
          sizes="(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width: 2400px) 2400px, 1200px"
        />
      </div> -->
      <div class="grid gap-8">
        <section id="section-about">
          <h2 class="text-2xl lg:text-5xl mb-4 mt-4 font-bold text-center">About Me</h2>
          <p class="leading-8 mb-8">
            Hi! I'm Ron and science, technology, programming, basketball, and automobiles are just a few of the things that I'm passionate about. I enjoy opportunities to try new things, share ideas, solve problems and make connections. I love it when I get the chance to explore how a new system, or device works. I started sharing what I've learned so far and what I&#39m learning now on
            my
            <a href="/blog" rel="prefetch" class="underline text-blue-500 hover:text-slate-500">blog</a>.
          </p>
        </section>
        <section>
          <h2 class="text-2xl lg:text-5xl mt-4 mb-4 font-bold text-center">My Work</h2>
          <PortfolioPreview project={featuredProject} />
          <div class="mt-8 text-center">
            <a href="/projects/" class="button" rel="prefetch">View All</a>
          </div>
        </section>
        <section id="section-contact">
          <h2 class="text-2xl lg:text-5xl mb-4 font-bold text-center">Get In Touch</h2>
          <p>
            Building something special and want to chat? I would love to hear
            about it! Send me an email and we can
            schedule a time to talk.
          </p>
          <div class="flex items-center gap-4 mt-3">
            <span
              class="w-9 h-9 flex items-center justify-center border-t border-zinc-700 rounded-full"
              ><img
                class="hover:animate-bounce-slow focus:animate-bounce-slow"
                src={send}
                alt="send email to jeanfrancoisron@gmail.com"
                height={20}
                width={20}
              />
            </span>
            <a
              href="mailto:jeanfrancoisron@gmail.com"
              class="text-lg text-blue-500 underline hover:text-slate-500 focus:text-slate-500"
              >jeanfrancoisron@gmail.com</a
            >
          </div>
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>
